{
    "compilerOptions": {
        "module": "amd",
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "es2015",
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "jsx": "react",
        "types": [
            "knockout",
            "requirejs",
            "jquery",
            "react",
            "react-dom"
        ],
        "lib": [
            "es2015",
            "dom",
            "dom.iterable"
        ],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}