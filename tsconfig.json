{
    "compilerOptions": {
        "module": "amd",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "target": "es5",
        "outDir": "./dist",
    "rootDir": "./src",
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "jsx": "react",
        "types": [
            "knockout",
            "requirejs",
            "jquery",
            "react",
            "react-dom"
        ],
        "lib": [
            "es2015.promise",
            "dom",
            "es5"
        ]
    },
    "include": ["src/**/*"]
}